            app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal7"
            app:layout_constraintEnd_toStartOf="@+id/vertical5"
            app:layout_constraintHeight="0dp"
            app:layout_constraintStart_toEndOf="@+id/vertical4"
            app:layout_constraintTop_toBottomOf="@+id/guidelineHorizontal6"

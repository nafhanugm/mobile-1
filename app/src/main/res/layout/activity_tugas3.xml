            app:layout_constraintEnd_toEndOf="@id/vertical7"
            app:layout_constraintHeight="0dp"
            app:layout_constraintStart_toEndOf="@+id/vertical6"
            app:layout_constraintTop_toBottomOf="@+id/guidelineHorizontal2"
            app:layout_constraintWidth="0dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button_calculator"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="4"
            android:textColor="@color/text_calculator"
            android:textSize="24dp"
            app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal5"
            app:layout_constraintEnd_toStartOf="@+id/vertical1"
            app:layout_constraintHeight="0dp"
            app:layout_constraintStart_toStartOf="@+id/verticalStart"
            app:layout_constraintTop_toBottomOf="@+id/guidelineHorizontal4"
            app:layout_constraintWidth="0dp" />

        <androidx.appcompat.widget.AppCompatButton

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Pert2TugasActivity"
    android:background="@drawable/gradient"
    >
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:id="@+id/btn_back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunset di tanah anarki"
        android:textColor="@color/yellow"
        android:id="@+id/txt_title"
        android:fontFamily="@font/poppins_medium"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_more_vert_24"
        android:id="@+id/btn_sidebar"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_music"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/txt_title"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:clipToOutline="true"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        android:src="@drawable/image_music" />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seek_bar"
        android:layout_below="@+id/img_music"
        android:layout_marginTop="60dp"
        android:paddingHorizontal="30dp"
        android:gravity="center_vertical"
        android:progress="50"
        android:splitTrack="false"
        android:progressTint="@color/yellow"
        android:progressDrawable="@drawable/progress"
        android:maxHeight="6dp"
        android:minHeight="6dp"
        android:thumb="@drawable/baseline_circle_24"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Superman is dead"
        android:textColor="#FF8F00"
        android:id="@+id/txt_author_ply"
        android:fontFamily="@font/poppins_medium"
        android:layout_centerInParent="true"
        android:layout_below="@id/seek_bar"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunset di Tanah Anarki"
        android:textColor="@color/yellow"
        android:id="@+id/txt_title_ply"
        android:fontFamily="@font/poppins_medium"
        android:layout_centerInParent="true"
        android:layout_below="@id/txt_author_ply"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_title_ply"
        android:layout_marginTop="80dp"
        >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/playbutton"
            android:id="@+id/btn_play"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_play"
            android:src="@drawable/left_icon" />

        <ImageView
            android:id="@+id/btn_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_play"
            android:src="@drawable/right_icon" />

    </RelativeLayout>


</RelativeLayout>
